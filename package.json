{
  "name": "use-country-info",
  "description": "use-country-info",
  "version": "1.0.20",
  "license": "MIT",
  "author": "Erik Ferreira de Lima <erik.lima.f@outlook.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "hook",
    "country",
    "information",
    "API",
    "data",
    "fetch",
    "global",
    "world",
    "flags",
    "ddi",
    "currency",
    "language",
    "capital",
    "population",
    "area"
  ],
  "scripts": {
    "build": "parcel build ./src/index.ts",
    "start": "parcel start ./src/index.ts",
    "dev": "nodemon --watch \"src//\" --exec \"ts-node src/index.ts\" -e ts",
    "test": "jest",
    "coverage": "node test.js --watchAll=false --coverage --watchAll=false",
    "deploy": "npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Erik-EFL/use-country-info.git"
  },
  "bugs": {
    "url": "https://github.com/Erik-EFL/use-country-info/issues"
  },
  "homepage": "https://github.com/Erik-EFL/use-country-info",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/reportWebVitals.{js,ts}",
      "!src/**/*.d.{js,ts}",
      "!src/mock/data.mock.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ]
  },
  "devDependencies": {
    "@parcel/core": "^2.10.3",
    "@parcel/packager-ts": "^2.10.3",
    "@parcel/transformer-typescript-types": "^2.10.3",
    "@parcel/types": "^2.10.3",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "parcel": "^2.10.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
